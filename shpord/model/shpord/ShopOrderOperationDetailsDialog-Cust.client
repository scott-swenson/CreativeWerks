@Override
assistant ShopOrderOperationDetailsDialog using ShopOrderOperationDetailsVirtualSet {
   label = "Operation Guide";
   singlestep {
      group CLotBatchOperationLotLotGeneralInfoGroup using CGetLotBatchInfo(OrderNo, ReleaseNo, SequenceNo, OperationNo);
      arrange {
         arrange {
            group CLotBatchOperationLotCustomerInfoGroup using CGetLotBatchInfo(OrderNo, ReleaseNo, SequenceNo, OperationNo);
            group CLotBatchOperationLotShiftInfoGroup using CGetLotBatchInfo(OrderNo, ReleaseNo, SequenceNo, OperationNo);
         }
         arrange {
            group CLotBatchOperationLotLotBatchInfoDefaultGroup using CGetLotBatchInfo(OrderNo, ReleaseNo, SequenceNo, OperationNo);
            group CLotBatchOperationLotLotBatchInfoOverrideGroup using CGetLotBatchInfo(OrderNo, ReleaseNo, SequenceNo, OperationNo);
         }
      }
   }
}

